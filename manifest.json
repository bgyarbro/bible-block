{
  "manifest_version": 3,
  "name": "Bible Block",
  "version": "2.1.0",
  "description": "Replace ads with Bible verses",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://openbible.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Bible Block Settings"
  }
}

