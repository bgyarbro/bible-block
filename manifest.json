{
  "manifest_version": 3,
  "name": "Bible Block",
  "version": "2.0.0",
  "description": "Replace ads with Bible verses",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://openbible.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

